<Window xmlns:View="clr-namespace:IPAddressViewer.View"
        x:Class="IPAddressViewer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPAddressViewer"
        xmlns:vm="clr-namespace:IPAddressViewer.ViewModel"
        mc:Ignorable="d"
        Width="400"
        Height="150"
        Title="IP Address Viewer">

    <!-- DataContext -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- コンテキストメニュー -->
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Require IP Address"/>
            <MenuItem Header="Another IP" Command="{Binding Path=ClosingCommand}"/>
            <Separator/>
            <MenuItem Header="IPv4" IsCheckable="True" IsChecked="True"/>
            <MenuItem Header="IPv6" IsCheckable="True" IsChecked="False"/>
        </ContextMenu>
    </Window.ContextMenu>
    
    <Grid>
        <TextBlock Text="{Binding Path=IPv4}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="{Binding Path=IPAddressFontSize}"/>
    </Grid>
</Window>
